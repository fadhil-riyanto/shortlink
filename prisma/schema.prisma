generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Link {
    id          Int     @id @default(autoincrement())
    link        String  @db.Text
    conversion  String? @unique
    token       String? @unique
    clickcount  Int    @default(0)
}

model Linkstats {
    id          Int     @id @default(autoincrement())
    conversion  String?
    token       String?

    // tracked data
    browser     String?
    cpu         String?
    os         String?
    is_mobile   String?
    vendor      String?
    model       String?
}